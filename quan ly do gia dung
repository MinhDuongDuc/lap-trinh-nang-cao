        private void comboBox1_SelectedIndexChanged(object sender, EventArgs e)
        {
            comboBox2.Items.Clear();
            if(comboBox1.SelectedItem == "Gia dụng nhà bếp" )
            {
                comboBox2.Items.Add("Nồi áp suất");
                comboBox2.Items.Add("Nồi cơm điện");
                comboBox2.Items.Add("Nồi đa năng");
                comboBox2.Items.Add("Bình thủy điện");
                comboBox2.Items.Add("Bình đun siêu tốc");
                comboBox2.Items.Add("Máy sấy chén");
            }
            else if (comboBox1.SelectedItem == "Dụng cụ nhà bếp")
            {
                comboBox2.Items.Add("Xoong, Nồi");
                comboBox2.Items.Add("Chảo chống dính");
                comboBox2.Items.Add("Tô - Chén - Dĩa");
                comboBox2.Items.Add("Dụng cụ ăn");
            }
            else if (comboBox1.SelectedItem == "Đồ dùng gia đình")
            {
                comboBox2.Items.Add("Balo, Vali");
                comboBox2.Items.Add("Nệm");
                comboBox2.Items.Add("Mền");
                comboBox2.Items.Add("Bộ drap");
                comboBox2.Items.Add("Gối và áo gối");
                comboBox2.Items.Add("Ổ cắm điện");
            }
            else if (comboBox1.SelectedItem == "Thiết bị gia đình")
            {
                comboBox2.Items.Add("Máy nước nóng");
                comboBox2.Items.Add("Máy hút bụi");
                comboBox2.Items.Add("Máy lọc nước nóng");
                comboBox2.Items.Add("Bàn ủi");
            }
        }

        private void comboBox2_SelectedIndexChanged(object sender, EventArgs e)
        {
            if(comboBox2.SelectedItem == "Nồi áp suất")
            {
                
                textBox3.Text = "113.000";
            }
            if(comboBox2.SelectedItem == "Nồi cơm điện")
            {
            
                textBox3.Text = "100.000";
            }
            if(comboBox2.SelectedItem == "Nồi đa năng")
            {
        
                textBox3.Text = "101.000";
            }
            if(comboBox2.SelectedItem == "Bình thủy điện")
            {
                
                textBox3.Text = "102.000";
            }
            if(comboBox2.SelectedItem == "Bình đun siêu tốc")
            {
                
                textBox3.Text = "103.000";
            }
            if(comboBox2.SelectedItem == "Máy sấy chén")
            {
                
                textBox3.Text = "104.000";
            }
            if(comboBox2.SelectedItem == "Xoong, Nồi")
            {
                
                textBox3.Text = "105.000";
            }
            if(comboBox2.SelectedItem == "Chảo chống dính")
            {
                
                textBox3.Text = "106.000";
            }
            if(comboBox2.SelectedItem == "Tô - Chén - Dĩa")
            {
                
                textBox3.Text = "107.000";
            }
            if(comboBox2.SelectedItem == "Dụng cụ ăn")
            {
                
                textBox3.Text = "108.000";
            }
            if(comboBox2.SelectedItem == "Balo, Vali")
            {

                textBox3.Text = "109.000";
            }

        }

